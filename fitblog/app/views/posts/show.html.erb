<article>
	<h2><%= @post.title %></h2>
	<div class="timestamp">
		<time datetime="<%= @post.post_date %>"><%= Date::MONTHNAMES[@post.post_date.month] %> <%= @post.post_date.day %>, <%= @post.post_date.year %></time>
	</div>
	<%= @post.body %>
</article>

<p><%= link_to 'Back to Posts', posts_path %></p>

<% if user_signed_in? %>
	Enter comment:<br>
	<%= form_for([@post, @post.comments.build]) do |f| %>
		<%= f.text_area :text %><br>
		<%= f.submit %>
	<% end %>
<% end %>