<h1>Login</h1>

<% if flash[:alert] %>
	<div><%= flash[:alert] %></div>
<% end %>

<%= form_tag sessions_path, method: :post do %>
<table>
	<tr>
		<td>Email: </td><td><%= text_field_tag :email %></td>
	</tr>
	<tr>
		<td>Password: </td><td><%= password_field_tag :password %></td>
	</tr>
	<tr>
		<td colspan="2"><%= submit_tag 'Sign In' %></td>
	</tr>
</table>
<% end %>

<p>New user? <%= link_to 'Sign up', new_user_path %></p>
