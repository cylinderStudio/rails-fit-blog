<h1>New User</h1>

<%= form_for @user, url: users_path do |f| %>
<table>
  <tr>
    <td><%= f.label :name %>: </td><td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :email %>: </td><td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td><%= f.label :password %>: </td><td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td><%= f.label :password_confirmation %>: </td><td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr><td colspan="2"><%= f.submit %></td></tr>
</table>
<% end %>
